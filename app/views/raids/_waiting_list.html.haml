%dt Waiting List
- waiting_list.each do |signup|
  = content_tag_for :dd, signup, :class => signup.classes(false) do
    - if signup.preferred?
      %strong= render :partial => 'shared/character', :object => signup.character
    - else
      = render :partial => 'shared/character', :object => signup.character
    = '*' if signup.has_other_signups?
    .note= render :partial => 'signups/note', :object => signup
%dd.empty{ :class => waiting_list.waiting_list.select { |signup| signup.character.account.characters.seated_in(signup.raid).count < 1 }.empty? && 'seated' } Empty
